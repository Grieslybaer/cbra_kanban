<h2>Listing Project Members</h2>
<hr>
<% if @members.empty? %>
	<div class="alert alert-info" role="alert">
		<p>No members available!</p>
		<%= link_to "Add new member", new_project_member_path, class: 'btn btn-success' %>
	</div>
<% else %>
<table class="table table-striped">
	<thead>
		<tr>
			<th>#</th>
			<th>Name</th>
			<th>Role</th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @members.each_with_index do |member, index| %>
			<tr>
				<td><%= index+1 %></td>
				<td><%= member.user.full_name %></td>
				<td><%= member.user_role %></td>
				<td><%= link_to 'Edit', edit_project_member_path(@project, member), class: 'btn btn-success btn-xs' %></td>
				<td><%= link_to 'Destroy', project_member_path(@project, member), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger btn-xs' %></td>
			</tr>
		<% end %>
	</tbody>
</table>
<% end %>
